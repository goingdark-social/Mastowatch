{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest (current file)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}