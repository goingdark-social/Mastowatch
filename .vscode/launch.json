{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest (current file)",
            "type": "debugpy",
            "request": "launch",
            "program": "-m",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}